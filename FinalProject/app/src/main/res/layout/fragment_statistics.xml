            <TextView
                android:id="@+id/theName"
                android:layout_width="281dp"
                android:layout_height="62dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/thanksbanny"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#302F35"

                android:textSize="25sp"
                android:textStyle="normal"
                tools:ignore="InvalidId" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:textColor="#A93D3E3E"
                    android:id="@+id/textView4"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thanksbanny"
                    android:text="Likes"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="37dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_like_after_click_24"
                    android:layout_marginLeft="7dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/numberLikes"
                android:layout_width="52dp"
                android:layout_height="62dp"
                android:ems="10"
                android:fontFamily="@font/thanksbanny"
                android:inputType="number"
                android:textColor="#34BF3A"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:textColor="#A93D3E3E"

                    android:id="@+id/textView3"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thanksbanny"
                    android:text="Trolls"
                    android:textSize="24sp" />

                <ImageView

                    android:layout_width="37dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_dislike_after_click_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/numberTrolls"
                android:layout_width="77dp"
                android:layout_height="62dp"
                android:ems="10"
                android:fontFamily="@font/thanksbanny"
                android:inputType="number"
                android:textColor="#DD0000"
                android:textSize="36sp"
                android:layout_marginLeft="12dp"
                />

        </LinearLayout>


    </LinearLayout>







